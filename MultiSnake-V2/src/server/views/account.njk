{% extends "temp.njk" %}
{% block head %}
<script>window.userUid = "{{ user.uid }}"</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js" integrity="sha512-E8QSvWZ0eCLGk4km3hxSsNmGWbLtSCSUcewDQPQWZF6pEU8GlT8a5fF32wOl1i8ftdMhssTrF/OhyGWwonTcXA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<title>Account | MultiSnake V2</title>
<style>
/* Custom styles for the account details */
.account-details {
      padding: 12px;
      margin: auto;
      width: 50%;
    }
</style>
{% endblock %}
{% block main %}
<header>

</header>

<main class="center top-20">
    <h1 class="heading">{{ user.email }}'s Account</h1>
    <div class="account-details">
        <p>User since 
            <script>
                var x = new Date({{ user.timestamp }}); 
                document.write(x.getMonth()+"."+x.getDate(0)+"."+x.getFullYear());
            </script>
        </p>
        <p><strong>Username:</strong> <span id = "username">{{user.username}}</span></p>
        <p><strong>Email:</strong> <span id = "email">{{user.email}}</span></p>
        <p><strong>Games Played:</strong> <span id = "gamesPlayed">{{user.gamesPlayed}}</span></p>
        <p><strong>Games Won:</strong> <span id = "gamesWon">{{user.gamesWon}}</span></p>
        <p><strong>Win/Loss Ration:</strong> <span id = "winLossRatio">{{user.gamesWon/user.gamesPlayed}}</span></p>
        <div class = "form button-row3">
          <button id="updateUsernameBtn">Update Username</button>
          <button id="updatePasswordBtn">Update Password</button>
          <button id="deleteAccountBtn">Delete Account</button>
        </div>
    </div>

</main>
{% endblock %}
